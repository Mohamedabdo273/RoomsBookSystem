@model IEnumerable<Models.HotelBranch>
@inject IWebHostEnvironment HostEnvironment

@{
    ViewData["Title"] = "Hotel Branches";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Hotel Branches</h1>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-hotel me-1"></i>
                Hotel Branches List
            </div>
            <a asp-action="CreateHotelBranch" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Branch
            </a>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="hotelBranchesTable">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Img))
                                    {
                                        <img src="~/HotelBranchImages/@item.Img"
                                             alt="@item.Name"
                                             class="img-thumbnail"
                                             style="max-width: 100px; height: 100px; object-fit: cover;"
                                             onerror="this.src='/images/no-image.png'" />
                                    }
                                    else
                                    {
                                        <img src="~/images/no-image.png"
                                             alt="No Image"
                                             class="img-thumbnail"
                                             style="max-width: 100px; height: 100px; object-fit: cover;" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Location</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditHotelBranch" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal@(item.Id)" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modals -->
@foreach (var item in Model)
{
    <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(item.Id)" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel@(item.Id)">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the hotel branch "@item.Name"?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="DeleteHotelBranch" asp-route-id="@item.Id" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#hotelBranchesTable').DataTable({
                responsive: true,
                order: [[1, 'asc']],
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    search: "Search branches:",
                    lengthMenu: "Show _MENU_ branches per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ branches",
                    infoEmpty: "No branches available",
                    infoFiltered: "(filtered from _MAX_ total branches)",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                },
                initComplete: function () {
                    // Add custom styling to search box
                    $('.dataTables_filter input').addClass('form-control');
                    $('.dataTables_length select').addClass('form-control');
                }
            });

            // Handle delete form submission
            $('form[asp-action="DeleteHotelBranch"]').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                var modal = form.closest('.modal');
                
                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function (result) {
                        modal.modal('hide');
                        location.reload();
                    },
                    error: function (error) {
                        alert('An error occurred while deleting the branch.');
                    }
                });
            });
        });
    </script>
}